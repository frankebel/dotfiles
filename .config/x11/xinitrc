# autostart apps
dunst &
flameshot & 
redshift &
udiskie &
transmission-daemon &
xidlehook --not-when-audio --not-when-fullscreen --timer 1800 'systemctl suspend' '' &

# device specific
case "$(cat /etc/hostname)" in
	*"desktop"* )
		# Desktop specific
		flexget daemon start -d &
		noisetorch -i alsa_input.pci-0000_0a_00.4.analog-stereo &
		pactl set-source-volume alsa_input.pci-0000_0a_00.4.analog-stereo 45% &
		xrandr --output DP-4 --left-of DP-2 &
		;;
	*"laptop"* )
		# Laptop specific
                blueman-applet &
                nm-applet &
		;;
	*"vm"* )
		# VM specific
		xrandr --output Virtual-1 --mode 1920x1080 &
		;;
	esac

# X11 specific
xrdb -merge "$XDG_CONFIG_HOME/x11/xresources"
xrandr --dpi 96

# Display Power Management Signaling
xset s off -dpms

# keyboard settings
xset r 66 # caps lock
xset r rate 150 50

# mouse settings
xinput --set-prop 8 'libinput Accel Profile Enabled' 0, 1
xinput --set-prop 8 'libinput Accel Speed' -0.4

# start window manager
exec qtile start
