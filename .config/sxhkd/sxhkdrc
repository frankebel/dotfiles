# Restart sxhkd
super + Escape
	pkill -SIGUSR1 -x sxhkd

# Applications
super + Return
	$TERMINAL

super + shift + Return
	rofi -show run

super + b
	firefox

super + d
	discord

super + i
	$TERMINAL -e htop

super + m
	$TERMINAL -e neomutt

super + shift + m
	$TERMINAL -e mbsync -c ~/.config/isync/mbsyncrc -a

super + n
	$TERMINAL -e newsboat

super + o
	pcmanfm

super + p
	pavucontrol

super + s
	steam

super + x
	xournalpp

Print
	flameshot gui

# Volume keys
ctrl + backslash
 	pactl set-source-mute alsa_input.pci-0000_0a_00.4.analog-stereo toggle; \
	notify-send "MIC MUTE TOGGLE"

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86Audio{Lower,Raise}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {-5%,+5%}

# Monitor Brightness
XF86MonBrightness{Down,Up}
	light {-U,-A} 10

# Screenlock
super + F1
	i3lock --color=282a36 -u

# reload background processes
super + shift + r
	gpg-connect-agent reloadagent /bye

# kill backgroud processes
super + shift + q
	dunstctl set-paused true; \
	flexget daemon stop; \
	transmission-remote --exit

# start background processes
super + shift + s
	dunstctl set-paused false; \
	flexget daemon start -d; \
	transmission-daemon

# Notifications
control + {space,shift + space,grave}
	dunstctl {close,close-all,history-pop}
