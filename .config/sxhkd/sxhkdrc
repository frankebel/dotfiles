# Restart sxhkd
super + Escape
	pkill -SIGUSR1 -x sxhkd

# Applications
super + Return
	$TERMINAL

super + shift + Return
	rofi -show run

super + b
	firefox

super + d
	discord

super + i
	$TERMINAL -e htop

super + m
	thunderbird

super + n
	$TERMINAL -e newsboat

super + o
	pcmanfm

super + p
	pavucontrol

super + s
	steam

Print
	flameshot gui

# Volume keys
{XF86AudioMute, XF86AudioLowerVolume, XF86AudioRaiseVolume}
	amixer set Master {toggle, 5%-, 5%+}

# Monitor Brightness
{XF86MonBrightnessDown, XF86MonBrightnessUp}
	light {-U 10, -A 10}

# Screenlock
super + F1
	i3lock --color=282a36 -u

# Notifications
control + space
	dunstctl close

control + shift + space
	dunstctl close-all

control + grave
	dunstctl history-pop
