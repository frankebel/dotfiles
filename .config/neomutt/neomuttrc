# options
set index_format = "%4C %Z %{%FT%R} %-15.15L %s"
set date_format = "!%FT%R"
set sort = reverse-date
set markers = no
set reverse_name
auto_view text/html
set mailcap_path = $XDG_CONFIG_HOME/neomutt/mailcap

# sidebar settings
set sidebar_visible
set sidebar_short_path
set sidebar_folder_indent
set sidebar_indent_string="    "

# default account
source "account.mbox"

# keybinds
source keybinds

# color theme
source dracula.muttrc
