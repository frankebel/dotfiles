#!/bin/sh

# Get volume

string='MIC'
vol_muted='M'

get_volume(){
	is_muted=$(pactl get-source-mute @DEFAULT_SOURCE@)
	volume=$(pactl get-source-volume @DEFAULT_SOURCE@ | grep -o "[0-9]\+%" | head -n 1 | grep -o "[0-9]\+")

	if [ "$is_muted" = "Mute: yes" ]
	then
		echo "$string $vol_muted"
	else
		echo "$string $volume %"
	fi
}

get_volume
