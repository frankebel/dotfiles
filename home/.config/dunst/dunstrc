# See dunst(5) for all configuration options
# Default config at /etc/dunst/dunstrc
# vim: ft=cfg

[global]
    follow = keyboard
    width = 300
    height = (0,300)
    origin = top-center
    offset = (0,10)
    font = Noto Sans Mono 10
    format = "<b>%s</b>\n%b"
    stack_duplicates = true
    enable_recursive_icon_lookup = true
    icon_theme = Adwaita
    sticky_history = false
    dmenu = /usr/bin/wofi --show dmenu
    mouse_left_click = do_action
    mouse_middle_click = context
    mouse_right_click = close_current
    frame_color = "#89b4fa"
    separator_color= frame
    highlight = "#89b4fa"

[urgency_low]
    foreground = "#cdd6f4"
    background = "#1e1e2e"

[urgency_normal]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    timeout = 10

[urgency_critical]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    frame_color = "#fab387"
    timeout = 0

[changebrighness]
    appname = changebrighness
    history_ignore = true

[changevolume]
    appname = changevolume
    history_ignore = true
