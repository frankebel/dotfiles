#!/bin/sh
# Get keyboard layout

string="KB"

get_kblayout() {
    case "$(setxkbmap -query)" in
        *colemak*)
            printf "%s col\n" "$string"
            ;;
        *us*)
            printf "%s us\n" "$string"
            ;;
        *)
            printf "%s unknown\n" "$string"
            ;;
    esac
}

get_kblayout
