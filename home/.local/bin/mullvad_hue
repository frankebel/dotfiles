#!/bin/sh
# Set hue lights inside local network with mullvad.

if [ -x "$(command -v mullvad)" ]; then
    case "$(mullvad status)" in
        Disconnected)
            huelight "$@"
            ;;
        Connected*)
            mullvad-exclude huelight "$@"
            ;;
    esac
else
    huelight "$@"
fi
